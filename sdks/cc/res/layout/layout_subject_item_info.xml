<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_subject_item_info"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1.0" >

        <TextView
            android:id="@+id/layout_subject_item_info_plate_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/common_transparent_selector"
            android:padding="7.5dip"
            android:singleLine="true"
            android:textColor="@color/common_textcolor_gray"
            android:textSize="14.0sp" />
    </LinearLayout>

    <com.lion.ccpay.view.praise.CommunitySubjectPraiseView
        android:id="@+id/layout_subject_item_info_like_num"
        android:layout_width="wrap_content"
        android:layout_height="25.0dip"
        android:background="@drawable/common_transparent_selector"
        android:drawableLeft="@drawable/common_community_like_round_selector"
        android:drawablePadding="5.0dip"
        android:gravity="center|left"
        android:paddingLeft="10.0dip"
        android:paddingRight="10.0dip"
        android:singleLine="true"
        android:textColor="@color/common_textcolor_gray"
        android:textSize="12.0sp" />

    <View
        android:id="@+id/layout_subject_item_info_community_line"
        android:layout_width="0.5dip"
        android:layout_height="10.0dip"
        android:background="@color/common_line" />

    <TextView
        android:id="@+id/layout_subject_item_info_community_num"
        android:layout_width="wrap_content"
        android:layout_height="25.0dip"
        android:layout_marginLeft="10.0dip"
        android:drawableLeft="@drawable/lion_icon_community_comments"
        android:drawablePadding="5.0dip"
        android:gravity="center|left"
        android:singleLine="true"
        android:textColor="@color/common_textcolor_gray"
        android:textSize="12.0sp" />

</LinearLayout>