<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tb_layout_tip_bg"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/tb_material_card"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tb_tv_tip_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="输入支付密码"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="5dp"
        android:background="#c6c6c6" />

    <com.tongbu.sdk.widget.password.TbGridPasswordView
        android:id="@+id/tb_pass_view"
        android:layout_width="250dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/tv_pass_forget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="10dp"
        android:layout_marginTop="8dp"
        android:text="忘记密码？"
        android:textColor="#037BFF" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="15dp"
        android:background="#c6c6c6" />

    <Button
        android:id="@+id/tb_bt_tip_pos"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_weight="1"
        android:background="@drawable/tb_dialog_button"
        android:gravity="center"
        android:text="@string/tb_base_tip_ok"
        android:textColor="#037BFF"
        android:textSize="16sp"
        android:textStyle="bold" />

</LinearLayout>