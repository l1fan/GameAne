<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/anzhi_e5e5e5"
    android:fillViewport="true" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_10"
            android:layout_marginRight="@dimen/size_10"
            android:layout_weight="1"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/linearLayout2"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/size_48"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/size_10" >

                <LinearLayout
                    android:id="@+id/linearLayout1"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/size_48"
                    android:layout_toLeftOf="@id/getcode_tv"
                    android:background="@drawable/anzhi_window_input" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="5dp"
                        android:gravity="center_vertical"
                        android:text="@string/anzhi_telnumber"
                        android:textColor="@color/anzhi_494949"
                        android:textSize="@dimen/font_16" />

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical" >

                        <EditText
                            android:id="@+id/nameid_tel"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:background="@null"
                            android:cursorVisible="true"
                            android:hint="@string/anzhi_input_telnumber"
                            android:inputType="phone"
                            android:paddingRight="5dip"
                            android:singleLine="true"
                            android:textColor="@color/anzhi_494949"
                            android:textColorHint="@color/anzhi_d0d0d0"
                            android:textSize="@dimen/font_18" >

                            <requestFocus />
                        </EditText>
                    </RelativeLayout>
                </LinearLayout>

                <Button
                    android:id="@+id/getcode_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/anzhi_button_bg_orange_nopading"
                    android:gravity="center"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="@string/anzhi_get_authcode_txt"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/text_size_18_pt" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/linearLayout3"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/size_48"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/size_10" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/size_48"
                    android:background="@drawable/anzhi_window_input" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="5dp"
                        android:gravity="center_vertical"
                        android:text="@string/anzhi_validatecode"
                        android:textColor="@color/anzhi_494949"
                        android:textSize="@dimen/font_16" />

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical" >

                        <EditText
                            android:id="@+id/code_edittext"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:background="@null"
                            android:hint="@string/anzhi_input_six_validatecode"
                            android:inputType="number"
                            android:paddingRight="5dip"
                            android:singleLine="true"
                            android:textColor="@color/anzhi_494949"
                            android:textColorHint="@color/anzhi_d0d0d0"
                            android:textSize="@dimen/font_18" >

                            <requestFocus />
                        </EditText>
                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/new2_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="20dip"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:visibility="gone" >

                <TextView
                    android:id="@+id/zhifu_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/anzhi_confirm_paypwd" />

                <EditText
                    android:id="@+id/pwd_second"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/zhifu_textview"
                    android:layout_marginTop="10dip"
                    android:ems="10"
                    android:hint="@string/anzhi_input_paypwd" >

                    <requestFocus />
                </EditText>
            </RelativeLayout>

            <Button
                android:id="@+id/submit"
                style="@style/azuc_btn_bg_green"
                android:layout_width="fill_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/size_40"
                android:gravity="center"
                android:text="@string/anzhi_clear_atonce" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/size_10"
            android:layout_marginLeft="@dimen/size_10"
            android:layout_marginRight="@dimen/size_10"
            android:orientation="vertical" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_weight="2"
                android:background="@drawable/anzhi_window_input"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:text="@string/anzhi_help_customer"
                android:textColor="@color/anzhi_757575"
                android:textSize="@dimen/font_12" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:autoLink="phone"
                android:background="@drawable/anzhi_textview_normal_b"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:text="@string/anzhi_service_tel_3_2"
                android:textColor="@color/anzhi_757575"
                android:textSize="@dimen/font_12" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>