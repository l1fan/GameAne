<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:background="#f7f7f7"
	android:id="@+id/container">
	
	<ScrollView 
	    android:layout_below="@+id/title"
	    android:layout_height="wrap_content" 
		android:layout_width="fill_parent" >
	    <LinearLayout 
	        android:layout_height="wrap_content"
			android:layout_width="fill_parent"
			android:orientation="vertical">
	        <LinearLayout
			    android:id="@+id/layout_login_type"
				android:layout_height="40dp"
				android:layout_width="fill_parent" 
				android:orientation="horizontal"
				android:gravity="center">
				<Button
					android:id="@+id/normal_login"
					android:layout_height="40dp"
					android:layout_width="fill_parent" 
					android:scaleType="center"
					android:layout_gravity="center"
					android:layout_weight="1"
					android:onClick="onClick"
					android:background="@drawable/tieba_login_tab_pressed"
					android:textSize="16sp"
					android:textColor="#3289cb"
					android:text="@string/tieba_normal_login"/>
				<Button 
					android:id="@+id/mobile_login" 
					android:layout_height="40dp"
					android:layout_width="fill_parent" 
					android:scaleType="center"
					android:layout_gravity="center"
					android:layout_weight="1"
					android:onClick="onClick"
					android:background="@drawable/tieba_login_tab_normal"
					android:textColor="@android:color/black"
					android:textSize="16sp"
					android:text="@string/tieba_mobile_login"/>
			</LinearLayout>
			
	        <FrameLayout 
	            	android:layout_width="wrap_content"
		            android:layout_height="wrap_content">
		        <TextView 
		            android:id="@+id/text_error"
		            android:drawableLeft="@drawable/tieba_login_error"
		            android:textColor="#FF0000"
		            android:visibility="invisible"
		            android:gravity="center_vertical"
		            android:layout_width="wrap_content"
		            android:layout_height="25dip"
		            android:textSize="14sp"
		            android:paddingLeft="8dip"
		            android:singleLine="true"/>
		        <TextView 
		            android:id="@+id/text_info"
		            android:textColor="#FF355DBF"
		            android:visibility="gone"
		            android:gravity="center_vertical"
		            android:layout_width="wrap_content"
		            android:layout_height="25dip"
		            android:textSize="14sp"
		            android:paddingLeft="8dip"
		            android:singleLine="true"/>
			</FrameLayout>
	        <TableLayout 
	            android:layout_height="fill_parent"
				android:layout_width="fill_parent"
				android:paddingLeft="8dip"
				android:paddingRight="8dip">
	            <TableRow 
	                android:id="@+id/layout_account"
	                android:background="@drawable/tieba_login_input_top">
	                <FrameLayout 
	                    android:layout_height="46dp"
						android:layout_width="wrap_content"
						android:layout_gravity="center_vertical">
		            	<TextView 
			                android:id="@+id/text_title_account"
			                android:layout_height="wrap_content"
							android:layout_width="wrap_content"
							android:paddingLeft="15dip"
							android:textColor="@android:color/black"
							android:textSize="16sp"
							android:text="@string/tieba_account_account"
							android:layout_gravity="center_vertical"/>
		            	<TextView 
			                android:visibility="invisible"
			                android:layout_height="wrap_content"
							android:layout_width="wrap_content"
							android:paddingLeft="15dip"
							android:textColor="@android:color/black"
							android:textSize="16sp"
							android:text="@string/tieba_title_vcode"
							android:layout_gravity="center_vertical"/>
	            	</FrameLayout>
	            	<LinearLayout
						android:layout_weight="1"
						android:layout_height="wrap_content"
						android:layout_width="0dip"
						android:layout_marginLeft="4dip"
						android:orientation="horizontal"
						android:gravity="center_vertical"
						android:layout_gravity="center_vertical">
			            <EditText android:id="@+id/login_edit_account"
							android:padding="5dip"
							android:singleLine="true"
							android:hint="@string/tieba_account_hint_normal"
							android:textColor="#3b3b3b"
							android:textSize="14sp"
							android:background="@null"
							android:layout_height="wrap_content"
							android:layout_width="0dip"
							android:layout_weight="1"/>
			            <Button android:id="@+id/button_account_del"
							android:layout_height="20dp"
							android:layout_width="20dp"
							android:layout_marginLeft="5dip"
							android:layout_marginRight="5dip"
							android:background="@drawable/tieba_home_search_quit"
							android:onClick="onClick"/>
					</LinearLayout>  
	            </TableRow>
	            
	            <TableRow
	                android:id="@+id/layout_password"
	                android:background="@drawable/tieba_login_input_under">
	                <TextView 
		                android:id="@+id/text_title_password"
		                android:layout_height="46dp"
						android:layout_width="wrap_content"
						android:paddingLeft="15dip"
						android:textColor="@android:color/black"
						android:textSize="16sp"
						android:text="@string/tieba_account_password"
                        android:gravity="center_vertical"
						android:layout_gravity="center_vertical"/>
	                <LinearLayout
						android:layout_weight="1"
						android:layout_height="wrap_content"
						android:layout_width="0dip"
						android:layout_marginLeft="4dip"
						android:orientation="horizontal"
						android:gravity="center_vertical"
						android:layout_gravity="center_vertical">
			            <EditText android:id="@+id/login_edit_password"
			                android:imeOptions="actionSend"
			                android:hint="@string/tieba_account_password"
							android:padding="5dip"
							android:singleLine="true"
							android:inputType="textPassword"
							android:textColor="#3b3b3b"
							android:textSize="14sp"
							android:background="@null"
							android:layout_height="wrap_content"
							android:layout_width="0dip"
							android:layout_weight="1"/>
			            <Button android:id="@+id/button_pass_del"
							android:layout_height="20dp"
							android:layout_width="20dp"
							android:layout_marginLeft="5dip"
							android:layout_marginRight="5dip"
							android:background="@drawable/tieba_home_search_quit"
							android:onClick="onClick"/>
					</LinearLayout>
	            </TableRow>
	            
	            <TableRow
	                android:id="@+id/layout_vcode"
	                android:visibility="gone"
	                android:background="@drawable/tieba_login_input_under">
	               	<TextView 
		                android:id="@+id/text_title_vcode"
		                android:layout_height="wrap_content"
						android:layout_width="wrap_content"
						android:paddingLeft="15dip"
						android:textColor="@android:color/black"
						android:textSize="16sp"
						android:text="@string/tieba_title_vcode"
						android:layout_gravity="center_vertical"/>
	                <LinearLayout
			            android:layout_height="wrap_content"
						android:layout_width="fill_parent"
						android:baselineAligned="false"
						android:gravity="center_vertical"
						android:layout_gravity="center_vertical"
						android:layout_weight="1">
						<LinearLayout
							android:layout_weight="1"
							android:layout_height="wrap_content"
							android:layout_width="0dip"
							android:layout_marginLeft="4dip"
							android:orientation="horizontal"
							android:gravity="center_vertical"
							android:layout_gravity="center_vertical">
						    <EditText android:id="@+id/edit_vcode"
						        android:inputType="text"
						        android:imeOptions="actionDone"
						        android:textSize="14sp"
								android:padding="5dip"
								android:singleLine="true"
								android:textColor="#3b3b3b"
								android:background="@null"
								android:layout_height="wrap_content"
								android:layout_width="0dip"
								android:layout_weight="1"/>
						    <Button android:id="@+id/button_vcode_del"
								android:layout_height="wrap_content"
								android:layout_width="wrap_content"
								android:layout_marginLeft="5dip"
								android:layout_marginRight="5dip"
								android:background="@drawable/tieba_home_search_quit"
								android:onClick="onClick"/>
						</LinearLayout>
			            
			            <FrameLayout 
							android:layout_width="wrap_content" 
							android:layout_height="wrap_content">
				            <ImageView 
				                android:id="@+id/image_vcode1"
				                android:layout_height="40dip"
								android:layout_width="100dip"
								android:clickable="true"
								android:scaleType="fitCenter"
								android:background="@drawable/tieba_background"
								android:onClick="onClick"/>
				            <ImageView 
				                android:id="@+id/image_vcode2"
				                android:layout_height="40dip"
								android:layout_width="100dip"
								android:visibility="gone"
								android:clickable="true"
								android:scaleType="fitCenter"
								android:background="@drawable/tieba_background"
								android:onClick="onClick"/>
				            <ProgressBar 
								android:id="@+id/image_progress"
								android:visibility="gone"
								android:indeterminateDrawable="@drawable/tieba_progressbar"
								android:layout_width="wrap_content" 
								android:layout_height="wrap_content" 
								android:layout_gravity="center"
								style="?android:attr/progressBarStyleSmall"/>
						</FrameLayout>
						
			            <Button 
			                android:id="@+id/button_vcode_refresh"
			                android:layout_width="wrap_content" 
							android:layout_height="wrap_content"
							android:background="@null"
							android:onClick="onClick"
							android:textColor="#3289cb"
							android:text="@string/tieba_vcode_refresh"/>
	        		</LinearLayout>
	            </TableRow>
	        </TableLayout>
			
			<LinearLayout android:id="@+id/layout_login" 
				android:layout_height="46dp"
				android:layout_width="fill_parent"
				android:layout_marginLeft="8dip"
				android:layout_marginRight="8dip"
				android:layout_marginTop="10dip"
				android:gravity="center"
				android:layout_gravity="center_horizontal"
				android:clickable="false"
				android:background="@drawable/tieba_login_bg">
	            <ProgressBar
	                android:id="@+id/progress_login"
	                android:layout_width="wrap_content" 
					android:layout_height="wrap_content"
					android:indeterminateDrawable="@drawable/tieba_login_progressbar"
					android:layout_gravity="center"
					android:visibility="gone"
					style="?android:attr/progressBarStyleSmall"/>
				<TextView android:id="@+id/text_login"
					android:text="@string/tieba_account_login"
					android:textColor="#ffffff"
					android:padding="5dip"
					android:textSize="16sp"
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:enabled="false"/>
			</LinearLayout>
	    </LinearLayout>
	</ScrollView>
	
	<LinearLayout 
		android:id="@+id/title" 
		style="@style/title_margin"
		android:layout_alignParentTop="true"
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content"
		android:orientation="horizontal">
		<ImageView 
			android:id="@+id/back" 
			android:text="@string/tieba_back"
			style="@style/comm_controls"
			android:layout_gravity="center_vertical"
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content">
		</ImageView>
		<TextView 
	        android:id="@+id/title_text"
			android:text="@string/tieba_title_login" 
			android:layout_width="0dip"
			android:layout_height="wrap_content"  
			android:layout_weight="1"
			android:layout_gravity="center"
			android:gravity="center"
			style="@style/title_info_shadow"
			android:singleLine="true">
		</TextView>
		<Button 
			android:id="@+id/login_bt_reg"
			android:text="@string/tieba_account_regedit"
			style="@style/title_comm"
			android:layout_gravity="center_vertical">
		</Button>
	</LinearLayout>

</RelativeLayout>