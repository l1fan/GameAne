<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dk_layout_payment_dialog_new"
    android:layout_width="280dp"
    android:layout_height="146dp"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/dk_layout_dialog_content_new"
        android:layout_width="fill_parent"
        android:layout_height="106dp"
        android:background="@drawable/dk_bg_dialog_new"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/dk_tv_dialog_tip_info_new"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="36dp"
            android:layout_marginRight="36dp"
            android:textColor="#333333"
            android:textSize="@dimen/text_size_16_sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/dk_btn_dialog_back_new"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/dk_payment_dialog_bt_left_selector"
            android:gravity="center"
            android:text="@string/dk_btn_string_back"
            android:textColor="@color/dk_color_f08f1e"
            android:textSize="@dimen/text_size_14_sp" />

        <Button
            android:id="@+id/dk_btn_dialog_cancel_new"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/dk_payment_dialog_bt_right_selector"
            android:gravity="center"
            android:text="@string/dk_cancel_text"
            android:textColor="@color/dk_color_207ae8"
            android:textSize="@dimen/text_size_14_sp" />
    </LinearLayout>

</LinearLayout>